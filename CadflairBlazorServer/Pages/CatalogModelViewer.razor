            <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Large" />
            <MudText Typo="Typo.h6"><strong>Learn More</strong></MudText>
            <MudSpacer />
            <MudIconButton OnClick="() => _showRequestDialog = false" Icon="@Icons.Material.Filled.Close" />
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudStack Class="pb-3">
