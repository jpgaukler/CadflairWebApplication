@using Microsoft.AspNetCore.Components.Web
@namespace CadflairBlazorServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <!-- Autodesk Forge Viewer styles -->
    <link href="https://developer.api.autodesk.com/modelderivative/v2/viewers/7.*/style.min.css" rel="stylesheet" type="text/css">

    <!-- MudBlazor styles -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />

    <!-- FontAwesome icons-->
    <link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">

    <!-- App stylesheets -->
    <link href="css/site.css" rel="stylesheet" />
    <link href="CadflairBlazorServer.styles.css" rel="stylesheet" />

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <!-- MudBlazor script -->
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>

    <!-- Autodesk Forge Viewer script -->
    <script src="https://developer.api.autodesk.com/modelderivative/v2/viewers/7.*/viewer3D.min.js"></script>

    <!-- project script -->
    <script src="js/forge_viewer.js"></script>
    <script src="js/clipboard.js"></script>
    <script src="js/download_file.js"></script>
    <script src="js/anchor_link.js"></script>
</body>
</html>
