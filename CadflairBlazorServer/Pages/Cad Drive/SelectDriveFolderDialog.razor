<MudDialog >
    <DialogContent>
        <MudStack Style="height: 400px;">
            <MudStack Row AlignItems="AlignItems.Center">
                <MudText>Current location:</MudText>
                @if (CurrentLocation == null)
                {
                    <MudChip Icon="@Icons.Material.Filled.FolderSpecial">My Catalog</MudChip>
                }
                else
                {
                    <MudChip Icon="@Icons.Material.Filled.Folder">@CurrentLocation.DisplayName</MudChip>
                }
            </MudStack>
            <MudDivider />
            <MudText Typo="Typo.body1">Select new location:</MudText>
            <DriveFolderTree DriveFolders="DriveFolders" FolderToHide="FolderToHide" @bind-SelectedCatalogFolder="_selectedDriveFolder" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel_OnClick">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Ok_OnClick" Disabled="_selectedDriveFolder == null">Ok</MudButton>
    </DialogActions>
</MudDialog>
