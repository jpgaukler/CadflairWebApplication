<MudDialog>
    <DialogContent>
        <MudTextField Label="Folder Name" @bind-Value="_newFolderName" Variant="Variant.Outlined" Immediate />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel_OnClick">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Ok_OnClick" Disabled="@(string.IsNullOrWhiteSpace(_newFolderName))">Ok</MudButton>
    </DialogActions>
</MudDialog>
