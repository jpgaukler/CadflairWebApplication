@page "/catalog-editor"
@layout ConfiguratorLayout

<PageTitle>McMaster Style Catalog Editor</PageTitle>

<CascadingValue Value="_loggedInUser">
    <CascadingValue Value="_subscription">
        <MudTabs Position="Position.Left" Class="mud-height-full overflow-auto" PanelClass="overflow-auto flex-column pa-3 gap-3 mud-background-gray" Border>

            <MudTabPanel Text="Categories">
                <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex flex-column gap-3">
                    <ManageCategories Categories="_categories" />
                </MudContainer>
            </MudTabPanel>

            <MudTabPanel Text="Products">
                <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="d-flex flex-column gap-3">
                    <ManageProductDefinitions ProductDefinitions="_productDefinitions" />
                </MudContainer>
            </MudTabPanel>

            <MudTabPanel Text="Subscription">
                <MudContainer MaxWidth="MaxWidth.Medium">
                </MudContainer>
            </MudTabPanel>

            <MudTabPanel Text="Billing">
                <MudContainer MaxWidth="MaxWidth.Medium">
                </MudContainer>
            </MudTabPanel>

            <MudTabPanel Text="Account">
                <MudContainer MaxWidth="MaxWidth.Medium">
                </MudContainer>
            </MudTabPanel>

            <MudTabPanel Text="Settings">
                <MudContainer MaxWidth="MaxWidth.Medium">
                </MudContainer>
            </MudTabPanel>

            <MudTabPanel Text="Notifications">
                <MudContainer MaxWidth="MaxWidth.Medium">
                </MudContainer>
            </MudTabPanel>

        </MudTabs>
    </CascadingValue>
</CascadingValue>


