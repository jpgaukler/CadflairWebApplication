<MudDialog>
    <DialogContent>
        <MudTextField @ref="_mudTextField" @bind-Value="NewName" MaxLength="MaxLength" Variant="Variant.Outlined" Immediate/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel_OnClick">Cancel</MudButton>
        <MudButton OnClick="Ok_OnClick" Disabled="string.IsNullOrWhiteSpace(NewName)" Color="Color.Primary">Ok</MudButton>
    </DialogActions>
</MudDialog>