@if (string.IsNullOrWhiteSpace(_thumbnailStringBase64))
{
    <MudPaper Height="@($"{Height}px")" Width="@($"{Width}px")" Elevation="0" Class="d-flex align-center justify-center">
        @if (_loading)
        {
            <MudProgressCircular Size="Size.Small" Indeterminate />
        }
        else
        {
            <MudIcon Icon="@Icons.Material.Filled.ImageNotSupported" Size="Size.Large" />
        }
    </MudPaper>
}
else
{
    <MudImage Src="@($"data:image/png;base64,{_thumbnailStringBase64}")" Alt="thumbnail image" Height="Height" Width="Width" Style="transform: rotate(-120deg);" />
}

