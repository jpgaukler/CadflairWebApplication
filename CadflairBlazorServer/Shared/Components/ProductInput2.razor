
<MudText>
    @Name
</MudText>

@if(Items != null)
{
    foreach (ProductInput2 subItem in Items)
    {
        <ProductInput2 Items="@subItem.Items" @key="subItem.Guid"></ProductInput2>
    }
}

@code {

    [Parameter]
    public ProductInput2[]? Items { get; set; }

    public string UiElementSpec { get; set; } = string.Empty;
    public string Name { get; set; } = string.Empty;
    public string Guid { get; set; } = string.Empty;
    public string? ToolTip { get; set; }
    public string? EnablingParameterName { get; set; }
    public string? ParameterName { get; set; }
    public string? EditControlType { get; set; }
    public string? ReadOnly { get; set; }
}
