<MudDialog>
    <DialogContent>
        <MudTextField @ref="_mudTextField" @bind-Value="Header" Label="Header" Variant="Variant.Outlined" MaxLength="50" Immediate />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel_OnClick">Cancel</MudButton>
        <MudButton OnClick="Ok_OnClick" Disabled="string.IsNullOrWhiteSpace(Header)" Color="Color.Primary">Ok</MudButton>
    </DialogActions>
</MudDialog>