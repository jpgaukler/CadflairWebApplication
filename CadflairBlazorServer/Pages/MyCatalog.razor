@*@page "/catalog/{CompanyName}"*@
@page "/catalog/my-catalog"
@layout ConfiguratorLayout
@attribute [Authorize]

<PageTitle>Cadflair - My Catalog</PageTitle>

@*<iframe src="https://cadflair.com/demo/products" title="Cadflair model viewer" />*@

<MudDrawerContainer Class="mud-height-full relative">

    <!-- catalog folder tree -->
    <MudHidden Breakpoint="Breakpoint.MdAndDown">
        <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Left" Elevation="1" Variant="DrawerVariant.Persistent">
            <!-- new folder dialog -->
            <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" OnClick="NewCatalogFolder_OnClick" Class="ma-3">New Folder</MudButton>
            <CatalogFolderTree CatalogFolders="_catalogFolders" 
                               SelectedCatalogFolder="_selectedCatalogFolder" SelectedCatalogFolderChanged="CatalogFolder_OnClick" 
                               ShowMoreMenu RenameCatalogFolderClicked="RenameCatalogFolder_OnClick" MoveCatalogFolderClicked="MoveCatalogFolder_OnClick" DeleteCatalogFolderClicked="DeleteCatalogFolder_OnClick" />
        </MudDrawer>
    </MudHidden>

    <MudStack Class="mud-height-full px-5 pt-3 overflow-auto relative">
        <MudOverlay Visible="_initializing" Absolute Class="mud-background">
            <MudProgressCircular Color="Color.Default" Size="Size.Large" Indeterminate />
        </MudOverlay>

        <!-- header toolbar -->
        <div>
            <MudToolBar DisableGutters Dense>
                <CatalogFolderBreadcrumbs CatalogFolder="_selectedCatalogFolder" CatalogFolderClicked="CatalogFolder_OnClick" />
                <MudSpacer />

                <!-- new cad model dialog -->
                @if (_selectedCatalogFolder != null)
                {
                    <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" OnClick="() => _showNewCatalogModelDialog = true" Class="ma-3">New Model</MudButton>
                    <MudDialog @bind-IsVisible="_showNewCatalogModelDialog" Options="_newCatalogModelDialogOptions" ClassContent="relative">
                        <TitleContent>
                            <MudText Typo="Typo.h6">New Model</MudText>
                        </TitleContent>
                        <DialogContent>
                            <MudForm @bind-IsValid="_newCatalogModelValid">
                                <MudTextField Label="Display Name" @bind-Value="_newCatalogModelDisplayName" Variant="Variant.Outlined" MaxLength="50" Immediate Required />
                                <MudTextField Label="Description" @bind-Value="_newCatalogModelDescription" Variant="Variant.Outlined" Lines="3" MaxLength="500"/>
                                <MudFileUpload T="IBrowserFile" FilesChanged="(file) => _attachedFile = file" Hidden="_attachedFile != null"
                                           InputClass="absolute mud-width-full mud-height-full overflow-hidden z-20" InputStyle="opacity:0"
                                           @ondragenter="@SetDragStyle" @ondragleave="@ClearDragStyle" @ondrop="@ClearDragStyle">
                                    <ButtonTemplate>
                                        <MudPaper Height="300px" Outlined Class="relative pa-4" Style="@($"border-color: var(--mud-palette-lines-inputs); {_dragStyle}")">
                                            @if (_attachedFile == null)
                                            {
                                                <MudText Typo="Typo.body1">Drag and drop files here or click</MudText>
                                            }
                                            else
                                            {
                                                <MudChip Text="@_attachedFile?.Name" Icon="@Icons.Material.Filled.AttachFile" OnClose="() => _attachedFile = null" />
                                            }
                                        </MudPaper>
                                    </ButtonTemplate>
                                </MudFileUpload>
                            </MudForm>
                            <MudOverlay Visible="_uploadInProgress" Absolute Class="mud-background">
                                <MudStack AlignItems="AlignItems.Center">
                                    <MudProgressCircular Color="Color.Default" Size="Size.Large" Indeterminate />
                                    <MudText Typo="Typo.button">@_uploadProgressMessage</MudText>
                                </MudStack>
                            </MudOverlay>
                        </DialogContent>
                        <DialogActions>
                            <MudButton OnClick="NewCatalogModelDialog_OnClose" Disabled="_uploadInProgress">Cancel</MudButton>
                            <MudButton Color="Color.Primary" OnClick="NewCatalogModelDialog_OnSubmit" Disabled="!_newCatalogModelValid || _attachedFile == null || _uploadInProgress">Ok</MudButton>
                        </DialogActions>
                    </MudDialog>
                }

                <MudIconButton OnClick="ToggleView_OnClick" Icon="@(_displayListView ? Icons.Material.Filled.GridView : Icons.Material.Filled.ViewList)" />
            </MudToolBar>
            <MudDivider />
        </div>


        @if (_displayListView)
        {
            <MudDataGrid T="CatalogModel" Items="_catalogModels"
                     RowClick="CatalogModelsGrid_OnRowClick"
                     ColumnResizeMode="ResizeMode.Column"
                     Elevation="0" Height="100%" Class="overflow-auto"
                     Dense Hover FixedHeader Square>
                <Columns>
                    <TemplateColumn>
                        <CellTemplate>
                            <CatalogModelThumbnail CatalogModel="@context.Item" Height="140" Width="140" />
                        </CellTemplate>
                    </TemplateColumn>
                    <PropertyColumn Property="x => x!.DisplayName" Title="Display Name" />
                    <TemplateColumn>
                        <CellTemplate>
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="() => DeleteCatalogModel_OnClick(context.Item!)" />
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
            </MudDataGrid>
        }
        else
        {
            <MudStack Class="flex-grow-1 overflow-auto">
                @if(_selectedCatalogFolder == null)
                {
                    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Class="flex-grow-1">
                        <MudStack AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.InsertDriveFile" Size="Size.Large" />
                            <MudText>Select a folder.</MudText>
                        </MudStack>
                    </MudStack>
                }
                else
                {
                    @if (_selectedCatalogFolder.ChildFolders.Any())
                    {
                        <MudText Typo="Typo.body2" Class="mx-2" Style="font-weight:500">Folders</MudText>
                        <MudGrid Justify="Justify.FlexStart" Class="ma-0" Spacing="0">
                            @foreach (CatalogFolder catalogFolder in _selectedCatalogFolder.ChildFolders)
                            {
                                <MudItem Class="pa-2">
                                    <MudPaper Width="140px">
                                        <MudButton OnClick="() => CatalogFolder_OnClick(catalogFolder)" StartIcon="@Icons.Material.Filled.Folder" Variant="Variant.Text">@catalogFolder.DisplayName</MudButton>
                                    </MudPaper>
                                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AnchorOrigin="Origin.BottomLeft">
                                        <MudMenuItem OnClick="() => MoveCatalogFolder_OnClick(catalogFolder)" Icon="@Icons.Material.Filled.DriveFileMove">Move</MudMenuItem>
                                        <MudMenuItem OnClick="() => RenameCatalogFolder_OnClick(catalogFolder)" Icon="@Icons.Material.Filled.DriveFileRenameOutline">Rename</MudMenuItem>
                                        <MudMenuItem OnClick="() => DeleteCatalogFolder_OnClick(catalogFolder)" Icon="@Icons.Material.Filled.Delete">Delete</MudMenuItem>
                                    </MudMenu>
                                </MudItem>
                            }
                        </MudGrid>
                    }
                    @if (_catalogModels.Any())
                    {
                        <MudText Typo="Typo.body2" Class="mx-2" Style="font-weight:500">Models</MudText>
                        <MudGrid Justify="Justify.FlexStart" Class="ma-0" Spacing="0">
                            @foreach (CatalogModel catalogModel in _catalogModels)
                            {
                                <MudItem Class="pa-2">
                                    <MudPaper>
                                        <MudButton Variant="Variant.Text" Href=@($"catalog/{_subscription?.SubdirectoryName}/{catalogModel.Guid}")>
                                            <MudStack Style="width:140px">
                                                <CatalogModelThumbnail CatalogModel="@catalogModel" Height="140" Width="140" />
                                                <MudText Typo="Typo.button" Style="text-overflow: ellipsis; overflow:hidden; white-space:nowrap;">@catalogModel.DisplayName</MudText>
                                            </MudStack>
                                        </MudButton>
                                        <MudMenu Icon="@Icons.Material.Filled.MoreVert" AnchorOrigin="Origin.BottomLeft">
                                            <MudMenuItem OnClick="() => DeleteCatalogModel_OnClick(catalogModel)" Icon="@Icons.Material.Filled.Delete">Delete</MudMenuItem>
                                            @*<MudMenuItem OnClick="() => MoveCatalogModel_OnClick(catalogModel)"  Icon="@Icons.Material.Filled.DriveFileMove">Move</MudMenuItem>*@
                                            @*<MudMenuItem OnClick="() => Embed_OnClick(catalogModel)"  Icon="@Icons.Material.Filled.Code">Embed</MudMenuItem>*@
                                        </MudMenu>
                                    </MudPaper>
                                </MudItem>
                            }
                        </MudGrid>
                    }
                    else
                    {
                        <!-- TO DO: this is flashing when a new folder is clicked, need to get rid of that -->
                        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Class="flex-grow-1">
                            <MudStack AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.InsertDriveFile" Size="Size.Large" />
                                <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" OnClick="() => _showNewCatalogModelDialog = true" Class="ma-3">New Model</MudButton>
                            </MudStack>
                        </MudStack>
                    }
                }
            </MudStack>
        }

    </MudStack>
</MudDrawerContainer>

